<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/relajacion"
    android:orientation="vertical"
    tools:context=".SplashRelajacion">

    <Space
        android:layout_width="match_parent"
        android:layout_height="210dp" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:shadowRadius="3"
        android:text="¡Bienvenido! Con nuestros estiramientos suaves y efectivos, podrás relajar tu cuerpo y mente después de un día largo y agotador. Cada estiramiento se enfoca en áreas comunes de tensión, como el cuello, los hombros, la espalda y las piernas. Las instrucciones son claras y fáciles de seguir"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#AE000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</LinearLayout>